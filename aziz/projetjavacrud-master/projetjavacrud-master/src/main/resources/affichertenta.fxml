<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="410.0" prefWidth="600.0" style="-fx-background-color: FFF8B4FF;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherTentaController">
   <children>
      <TableView fx:id="tentativeTable" layoutX="53.0" layoutY="89.0" prefHeight="231.0" prefWidth="499.0">
         <columns>
            <TableColumn fx:id="idtCol" prefWidth="90" text="ID Tentative" />
            <TableColumn fx:id="idquizCol" prefWidth="90" text="ID Quiz" />
            <TableColumn fx:id="idqCol" prefWidth="90" text="ID Question" />
            <TableColumn fx:id="idetudCol" prefWidth="110" text="ID Étudiant" />
            <TableColumn fx:id="reponseCol" prefWidth="110" text="Bonne Réponse" />
         </columns>
      </TableView>

      <Label layoutX="75.0" layoutY="21.0" prefHeight="54.0" prefWidth="449.0" text="Afficher les tentatives" wrapText="true">
         <font>
            <Font name="Corbel Light" size="40.0" />
         </font>
         <textFill>
            <LinearGradient cycleMethod="REFLECT" endX="0.7" endY="0.45" startX="0.64" startY="0.59">
               <stops>
                  <Stop offset="0.0">
                     <color>
                        <Color red="0.27" green="0.67" blue="0.42" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.04" green="0.04" blue="0.04" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Label>

      <Button fx:id="goacceuil" layoutX="100.0" layoutY="343.0" mnemonicParsing="false" onAction="#naviguerAcceuil" prefHeight="26.0" prefWidth="150.0" style="-fx-background-color: FFA500;" text="Accueil" underline="true" />

      <Button fx:id="quitter" layoutX="330.0" layoutY="343.0" mnemonicParsing="false" onAction="#QuitterProgramme" prefHeight="26.0" prefWidth="150.0" style="-fx-background-color: FFA500;" text="Quitter" underline="true" />
   </children>
</AnchorPane>
