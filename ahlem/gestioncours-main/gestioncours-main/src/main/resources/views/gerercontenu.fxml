<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="700.0"
            style="-fx-background-color: #f4f4f4;"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ContenuCoursController">

 <!-- Champs de saisie -->
 <TextField fx:id="idTF"
            layoutX="30.0" layoutY="20.0"
            prefWidth="200.0"
            promptText="ID" />

 <TextField fx:id="titreTF"
            layoutX="30.0" layoutY="60.0"
            prefWidth="200.0"
            promptText="Titre" />

 <ComboBox fx:id="typeCB"
           layoutX="30.0" layoutY="100.0"
           prefWidth="200.0"
           promptText="Type" />

 <TextField fx:id="urlTF"
            layoutX="30.0" layoutY="140.0"
            prefWidth="200.0"
            promptText="URL" />

 <TextField fx:id="idCoursTF"
            layoutX="30.0" layoutY="180.0"
            prefWidth="200.0"
            promptText="ID du cours" />

 <!-- Boutons d'action -->
 <Button fx:id="ajouterBtn"
         layoutX="260.0" layoutY="20.0"
         prefWidth="100.0"
         text="Ajouter"
         onAction="#ajouterContenu" />

 <Button fx:id="afficherBtn"
         layoutX="260.0" layoutY="60.0"
         prefWidth="100.0"
         text="Afficher"
         onAction="#afficherContenu" />

 <Button fx:id="retourBtn"
         layoutX="260.0" layoutY="100.0"
         prefWidth="100.0"
         text="Retour"
         onAction="#retourVersCours" />

 <!-- Zone de contenu -->
 <Label fx:id="titleLabel"
        layoutX="30.0" layoutY="230.0"
        prefWidth="300.0"
        text="Contenu du cours" />

 <TextArea fx:id="contentArea"
           layoutX="30.0" layoutY="260.0"
           prefWidth="640.0"
           prefHeight="300.0"
           promptText="Contenu Ã  afficher ici..." />

</AnchorPane>
